@model MVCFinalProject.Models.JobSearchCls
@{
    ViewBag.Title = "AllJobs_Pageload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Display All Jobs</h2>
<div>
    @using (Html.BeginForm("SearchJob_Click", "DisplayAllJobs", FormMethod.Post))
    {
        <table>
            <tr>
                <td style="padding-left:8px;"> <label>Job_Experience:</label></td>
                <td> @Html.TextBoxFor(m => m.insertjob.experience)</td>
                <td style="padding-left:8px;"> <label>Job_Skills:</label></td>
                <td> @Html.TextBoxFor(m => m.insertjob.skills)</td>
                <td style="padding-left:8px;"> <label>Job_Location:</label></td>
                <td> @Html.TextBoxFor(m => m.insertjob.location)</td>
                <td><input type="submit" value="search" /></td>
            </tr>
        </table>
    }
</div>
<div>
    @using (Html.BeginForm("AllJobs_Pageload", "SearchJob", FormMethod.Get))
    {
        if (Model != null)
        {
            if (Model.selectjob != null && Model.selectjob.Count != 0)
            {
                <table class="table">
                    <tr>
                    </tr>
                    <tr>

                        <th>
                            @Html.DisplayNameFor(m => m.insertjob.cid)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.insertjob.title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.insertjob.description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.insertjob.type)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.insertjob.location)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.insertjob.skills)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.insertjob.salary)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.insertjob.vacancy)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.insertjob.experience)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.insertjob.lastdate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.insertjob.status)
                        </th>
                    </tr>
                    @foreach (var item in Model.selectjob)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.cid)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.type)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.location)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.skills)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.salary)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.vacancy)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.experience)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.lastdate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.status)
                            </td>
                            <td>
                                @Html.ActionLink("Apply Now", "ApplyJob_Pageload", "ApplyJob", new { comid = item.cid, jobid = item.jid }, null)
                            </td>
                        </tr>
                    }

                </table>
            }
            else
            {
                <script>
                            alert('no data found');
                </script>
            }
        }
    }
    <div>
        @Html.ActionLink("Back to Home Page", "UserHome", "Login")
    </div>

</div>

